{
  "name": "goat-minify",
  "version": "2.0.0",
  "description": "Client-side code minification tool supporting JS, CSS, HTML, XML, JSON, YAML, TOML, and Markdown",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,md}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcog989/Goat-Minify"
  },
  "keywords": [
    "minifier",
    "minify",
    "javascript",
    "css",
    "html",
    "code-tool",
    "web-app"
  ],
  "author": "Chase McGoat",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.1",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 120,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error"
    }
  }
}
